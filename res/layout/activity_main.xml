<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

        <LinearLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/footer_height"
        android:orientation="horizontal"
        android:background="#eee"

>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/text_size_small"
	            android:text="@string/footer_text"/>
	
	        <ImageView android:id="@+id/footer_logo"
	        	android:clickable="true"
	        	android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:src="@drawable/logo_sapmentors" />
        </LinearLayout>            
    </LinearLayout>
    
    <Spinner
        android:id="@+id/spinner_emailto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/footer" />

    <EditText
        android:id="@+id/edit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner_emailto"
        android:layout_below="@+id/spinner_emailto"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_message"
        android:layout_below="@+id/edit_message"
        android:layout_marginTop="23dp"
        android:text="Send push message" 
        android:onClick="actionSendMessage"/>

        <Button
        android:id="@+id/button_dummynotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_send"
        android:layout_marginTop="23dp"
        android:text="Create dummy notification" 
        android:onClick="actionCreateDummyNotification"/>
</RelativeLayout>
